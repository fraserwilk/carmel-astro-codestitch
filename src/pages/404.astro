---
import BaseLayout from "src/layouts/BaseLayout.astro";
---

<BaseLayout
  title="Page Not Found"
  description="Sorry, we couldn’t find the page you’re looking for."
  preloadImg={import("@assets/images/landing-m.webp")}
>

  <section id="not-found">
    <div class="cs-container">
      <h1 class="cs-title">Page Not Found</h1>
      <p class="cs-text">The page you requested doesn’t exist or may have been moved.</p>
      <a href="/" class="cs-button-solid">Return to Home</a>
    </div>
  </section>

</BaseLayout>

<style lang="less">
  /* Mobile - 360px */
  @media only screen and (min-width: 0rem) {
    :global(body) {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    :global(main#main) {
      flex: 1;
      display: flex;
    }

    #not-found {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: var(--sectionPadding);
      text-align: center;

      .cs-container {
        width: 80%;
        max-width: 800px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: (16/16rem);
      }

      .cs-text {
        margin: 0 0 (8/16rem);
      }
    }
  }
</style>

