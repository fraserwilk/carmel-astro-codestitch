---
import { Image } from "astro:assets";
import logoWhiteImage from "@assets/svgs/logo-white.svg";
import logoBlackImage from "@assets/svgs/logo-black.svg";

import client from "@data/client.json";
---

<!-- ============================================ -->
<!--                   Footer                     -->
<!-- ============================================ -->

<footer id="cs-footer-269">
  <div class="cs-container">
      <!-- Logo Group -->
      <div class="cs-logo-group">
          <a aria-label="go back to home" class="cs-logo" href="/">
              <Image class="cs-logo-img" aria-hidden="true" src={logoWhiteImage} alt="logo">
          </a>
      </div>
      <!-- Links -->
      <ul class="cs-nav">
          <li class="cs-nav-li">
              <span class="cs-header">Sitemap</span>
          </li>
          <li class="cs-nav-li">
              <a class="cs-nav-link" href="/">Home</a>
          </li>
          <li class="cs-nav-li">
              <a class="cs-nav-link" href="/emdr">EMDR</a>
          </li>
          <li class="cs-nav-li">
              <a class="cs-nav-link" href="/work-with-me">Services</a>
          </li>
          <li class="cs-nav-li">
              <a class="cs-nav-link" href="/about">About Carmel</a>
          </li>
      </ul>
      <!-- Contact Info -->
      <ul class="cs-contact">
          <li class="cs-nav-li">
              <span class="cs-header">Contact</span>
          </li>
          <li class="cs-nav-li">
              <a class="cs-nav-link" href="/contact">Contact</a>
          </li>
          <li class="cs-contact-li">
              <a class="cs-contact-link" href={`mailto:${client.email}`}>Click to Email</a>
          </li>
      </ul>
  </div>
</footer>


<style lang="less">

/*-- -------------------------- -->
<---          Footer            -->
<--- -------------------------- -*/

/* Mobile - 360px */
@media only screen and (min-width: 0rem) {
    #cs-footer-269 {
        /* 60px - 100px top and bottom */
        padding: clamp(1rem, 2vw, 6.25rem) (16/16rem);
        background-color: var(--secondary);

        .cs-container {
            width: 80%;
            /* reset on tablet */
            max-width: 1280px;
            margin: auto;
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
            flex-wrap: wrap;
            /* 68px - 100px */
            column-gap: clamp(4.25rem, calc(8% + 2vw), 6.25rem);
            padding: 2rem 0;
        }

        .cs-logo-group {
            /* takes up all the space, lets the other ul's wrap below it */
            position: relative;
            margin-top: 1em;
        }

        .cs-logo {
            /* 210px - 240px */
            width: clamp(13.125rem, 8vw, 15rem);
            height: auto;
            display: block;
            /* 28px - 44px */
            margin-bottom: clamp(1.75rem, 4.17vw, 2.75rem);
        }

        .cs-logo-img {
            width: 6rem;
            height: auto;
        } 
        
        /* Navigation Links */
        .cs-nav {
            padding: 0;
            margin: 0;
        }

        .cs-nav-li {
            list-style: none;
            line-height: 1.5em;
            margin-bottom: (8/16rem);
            text-transform: uppercase;
            &:last-of-type {
                margin-bottom: 0;
            }
        }

        .cs-header {
            font-size: 1.2rem;
            line-height: 1.5em;
            font-weight: 900;
            text-transform: uppercase;
            margin-bottom: 1.1rem;
            color: var(--bodyTextColorWhite);
            position: relative;
            display: block;
        }

        .cs-nav-link {
            font-size: 1rem;
            text-decoration: none;
            line-height: 1.5em;
            color: var(--bodyTextColorWhite);
            position: relative;

            &:before {
                /* underline */
                content: "";
                width: 0%;
                height: (2/16rem);
                /* current color of the parent */
                background: currentColor;
                opacity: 1;
                position: absolute;
                display: block;
                bottom: (-2/16rem);
                left: 0;
                transition: width 0.3s;
            }

            &:hover {
                &:before {
                    width: 100%;
                }
            }
        }

        /* Contact Links */
        .cs-contact {
            margin: 0;
            padding: 0;
            width: auto;
            display: flex;
            flex-direction: column;
            align-self: stretch;
        }

        .cs-contact-li {
            list-style: none;
            margin-bottom: (0/16rem);
            &:last-of-type {
                margin-bottom: 0;
            }
        }

        .cs-contact-link {
            font-size: (16/16rem);
            text-decoration: none;
            line-height: 1.5em;
            text-align: left;
            color: var(--bodyTextColorWhite);
            display: inline-block;

            &:hover {
                text-decoration: underline;
            }
        }

        .cs-address {
            font-size: (16/16rem);
            margin-bottom: (20/16rem);
        }

        .cs-social-group {
            /* pushes away from the other flex items */
            margin-top: auto;
            margin-left: auto;
        }

        .cs-social {
            display: inline-flex;
            justify-content: flex-start;
            gap: (12/16rem);
        }

        .cs-social-link {
            width: (24/16rem);
            height: (24/16rem);
            background-color: #4e4b66;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            z-index: 1;
            transition:
                transform 0.3s,
                background-color 0.3s;

            &:hover {
                background-color: var(--primary);
                transform: translateY(-0.1875rem);
            }
        }

        .cs-social-img {
            height: (13/16rem);
            width: auto;
            display: block;
        }
    }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
    #cs-footer-269 {
        .cs-container {
            width: 80%;
            max-width: 1280px;
            row-gap: 0;
        }

        .cs-logo-group {
            width: auto;
            /* pushes everything to the right of it as far as possible in a flexbox */
            margin-right: auto;
        }

        .cs-text {
            width: 80%;
            max-width: (305/16rem);
            margin: 0;
        }

        .cs-nav,
        .cs-contact {
            /* 8px - 12px */
            margin-top: clamp(0.5rem, 1.2vw, 0.75rem);
        }
    }
}



</style>