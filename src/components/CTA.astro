---
import { Image } from "astro:assets";
import { Picture } from "astro:assets";

import carmelChairImage from "@assets/images/carmel-in-chair.jpg";
---

<section id="cta-51">
  <div class="cs-container">
    <div class="cs-content"> 
      <!--<span class="cs-topper">Contact Us</span> -->
      <p class="cs-title" style="margin-bottom: 2em;">
        If you'd like to get in touch, make the move today.
      </p>
      <a href="/contact" class="cs-button-solid">Contact Carmel</a>
    </div>
  </div>
  <!-- Background Image-->
  <div class="cs-picture">
    <Picture src={carmelChairImage} formats={['webp','jpg']} alt="Carmel in chair" />
  </div>
</section>

